<%- include ('./indexheader.ejs') %>
<link rel="stylesheet" href="https://cdn.rawgit.com/t4t5/sweetalert/v0.2.0/lib/sweet-alert.css">
			<div class="clearfix"></div>
			<!-- ============================================================== -->
			<!-- Top header  -->
			<!-- ============================================================== -->
			
			
			<!-- ======================== Banner Start ==================== -->
			<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
				<ol class="carousel-indicators">
					<li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
					<li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
					<li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
				</ol>
				<div class="carousel-inner">
				
                    <div class="carousel-item active">
                        <a href='/banner-product?id=<%=result[1][0].id%>'>
						<img class="d-block w-100" src="/images/<%=result[1][0].image%>" alt="First slide">
                    </a>
						
					</div>


                    <% for(i=1;i<result[1].length;i++) { %>
                        <!-- swiper-slide start -->
                        <div class="carousel-item">
                           <a href='/banner-product?id=<%=result[1][i].id%>'>
                            <img src="/images/<%=result[1][i].image%>">
                        </a>
                         
                        </div>
                        <!-- swiper-slide end-->
    
                        <% } %>
    
					
				
					
				</div>
				
				<a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
					<span class="carousel-control-prev-icon" aria-hidden="true"></span>
					<span class="sr-only">Previous</span>
				</a>
				<a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
					<span class="carousel-control-next-icon" aria-hidden="true"></span>
					<span class="sr-only">Next</span>
				</a>
			</div>
			<!-- ======================== Banner End ==================== -->
			
			<!-- ======================== Choose Category Start ==================== -->
			<section class="pt-5 pb-5">
				<div class="container">
					
					<div class="row">
						<div class="col-lg-12 col-md-12 col-sm-12">
							<div class="owl-carousel category-slider owl-theme">



                                <% for(i=0;i<8;i++) { %>


                                    <div class="item">
                                        <div class="woo_category_box border_style rounded">
                                            <div class="woo_cat_thumb">
                                                <a href="/shop?categoryid=<%=result[0][i].id%>"><img src="/images/<%=result[0][i].image%>" class="img-fluid" alt="" /></a>
                                            </div>
                                            <div class="woo_cat_caption">
                                                <h4><a href="/shop?categoryid=<%=result[0][i].id%>"><%=result[0][i].name%></a></h4>
                                            </div>
                                        </div>
                                    </div>
                                    

                                  

                                    <% } %>

							
								<!-- Single Item -->
							
						
							
							</div>
						</div>
					</div>
					
				</div>
			</section>
			<div class="clearfix"></div>
			<!-- ======================== Choose Category End ==================== -->
			
			<!-- ======================== Fresh Vegetables Start ==================== -->



            <% let j=0;
            let k = 4%>
        
            <% for(i=0;i<result[3].length;i++) { %>

			<section class="pt-0">
				<div class="container">
					
					<div class="row">
						<div class="col-lg-12 col-md-12 col-sm-12">
							<div class="sec-heading-flex pl-2 pr-2">
								<div class="sec-heading-flex-one">
									<h2><%=result[3][i].name%></h2>
								</div>
								<div class="sec-heading-flex-last">
									<a href="/view-all-product?id=<%=result[3][i].id%>" class="btn btn-theme">View More<i class="ti-arrow-right ml-2"></i></a>
								</div>
							</div>
						</div>
					</div>
					
					<div class="row">
						<div class="col-lg-12 col-md-12">
							<div class="owl-carousel products-slider owl-theme">
							

                                <% for(j=j;j<k;j++) { %>

                                    <div class="item">
                                        <div class="woo_product_grid">
                                            
                                            <div class="woo_product_thumb">
                                                <img src="/product?id=<%=result[2][j].productid%>" class="img-fluid" alt="" />
                                            </div>
                                            <div class="woo_product_caption center">
                                            
                                                <div class="woo_title">
                                                    <h4 class="woo_pro_title"><a href="/product?id=<%=result[2][j].productid%>"><%=result[2][j].productname%></a></h4>
                                                </div>

                                                
                                                <div class="woo_price">

                                                    <% if(result[2][j].productdiscount == 0) { %>
                                                        <h6>Rs. <%=result[2][j].productnetamount%></h6>


                                                        <% } else { %>
                                                            <h6>Rs. <%=result[2][j].productnetamount%><span class="less_price">Rs. <%=result[2][j].productprice%></span></h6>

                                                            <% } %>

                                                </div>
                                                <div class="woo_price">
                                                    <div class="sec-heading-flex-last">

                                                        <% if(result[2][j].productquantity == 0 || result[2][j].productquantity < 0) { %>

                                                            <a  class="btn btn-danger" style="margin-top: 20px;color: white;">Out Of Stock</a>

                                                            <% } else { %>
                                                                <a id="addToCart" categoryname='<%=result[2][j].productname%>' subcategoryid="<%=result[2][j].productsubcategoryid%>"  booking_id="<%=result[2][j].productid%>" price="<%=result[2][j].productnetamount%>" categoryid = '<%=result[2][j].productcategoryid%>' class="btn btn-theme addToCart" style="margin-top: 20px;color: white;">Add to cart</a>

                                                                <% } %>
                                                    </div>
                                                </div>
                                            </div>
                                                                        
                                        </div>
                                    </div>
                                    


                                    <% } %>



                                    <% k = k+4%>



								<!-- Single Item -->
							
							
							
							</div>
						</div>
					</div>
				</div>
			</section>
			<div class="clearfix"></div>

            <% } %>
			<!-- ======================== Fresh Vegetables End ==================== -->
			
			<!-- ======================== Fresh & Fast Fruits Start ==================== -->
			
			<div class="clearfix"></div>
			<!-- ======================== Fresh & Fast Fruits End ==================== -->
			
			<!-- ======================== Offer Banner Start ==================== -->
			<section class="offer-banner-wrap gray">
				<div class="container-fluid">
					<div class="row">
						<div class="col-lg-12 col-md-12">
							<div class="owl-carousel banner-offers owl-theme">
								


                                <% for(i=0;i<result[5].length;i++){ %>
								<!-- Single Item -->
								<div class="item">
									<div class="offer_item">
										<div class="offer_item_thumb">
											<div class="offer-overlay"></div>
											<a href = '/banner-product?id=<%=result[5][i].id%>'><img src="/images/<%=result[5][i].image%>" alt=""></a>
										</div>
										
									</div>
								</div>
								
							<% } %>
								
							</div>
						</div>
					</div>
				</div>
			</section>
			<div class="clearfix"></div>
			<!-- ======================== Offer Banner End ==================== -->
			
		
			<!-- ============================ Call To Action ================================== -->
			<section class="theme-bg call_action_wrap-wrap">
				<div class="container">
					<div class="row">
						<div class="col-lg-12">
							
							<div class="call_action_wrap">
								<div class="call_action_wrap-head">
									<h3>Do You Have Questions ?</h3>
									<span>We'll help you to grow your career and growth.</span>
								</div>
								<div class="newsletter_box">
									<div class="input-group">
										<input type="text" class="form-control" placeholder="Subscribe here...">
										<div class="input-group-append">
										<button class="btn search_btn" type="button"><i class="fas fa-arrow-alt-circle-right"></i></button>
										</div>
									</div>
								</div>
							</div>
							
						</div>
					</div>
				</div>
			</section>
			<!-- ============================ Call To Action End ================================== -->
			
            <%- include ('./indexfooter.ejs') %>

